<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:persistent="false" >
    
    <android.support.v7.preference.Preference
        android:key="prefMinutes"
        android:summary="@string/prefMinutesSummary"
        android:title="@string/prefMinutesTitle" />
    
    <android.support.v7.preference.Preference
        android:key="prefFontSize"
        android:summary="@string/prefFontSizeSummary"
        android:title="@string/prefFontSizeTitle" />

    <android.support.v7.preference.CheckBoxPreference
        android:defaultValue="true"
        android:key="prefFullHoursFormat"
        android:summaryOff="@string/prefHalfFormat"
        android:summaryOn="@string/prefFullFormat"
        android:title="@string/prefHourFormat" />

    <android.support.v7.preference.ListPreference
            android:defaultValue="0"
            android:dialogTitle="@string/prefLangTitle"
            android:entries="@array/lang"
            android:entryValues="@array/langValue"
            android:key="prefLang"
            android:title="@string/prefLangTitle" />
     <android.support.v7.preference.Preference
            android:key="prefSupport"
            android:summary="@string/prefSupportSummary"
            android:title="@string/prefSupportTitle" />
      <android.support.v7.preference.Preference
            android:key="prefLog"
            android:summary="@string/versionNum"
            android:title="@string/prefLogTitle" />
      <android.support.v7.preference.Preference
            android:key="prefBuy"
            android:summary="@string/purchaseKdsSummary"
            android:title="@string/purchaseKdsTitle" />
      <android.support.v7.preference.Preference
            android:key="prefRegister"
            android:title="@string/prefRegisterTitle" />
      
</android.support.v7.preference.PreferenceScreen>